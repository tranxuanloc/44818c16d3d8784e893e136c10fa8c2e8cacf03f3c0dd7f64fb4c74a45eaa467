<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:id="@+id/scan_dialog_grid"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="8">


        <TextView
            android:id="@+id/scan_dialog_palletId"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/scan_dialog_sl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#277a00"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/scan_dialog_result"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnSpan="2"
            android:textColor="#277a00"
            android:textSize="80sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Tồn" />

        <TextView
            android:id="@+id/scan_dialog_remain"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:textColor="#000"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/scan_dialog_remark"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:text="NSX" />

        <TextView
            android:id="@+id/scan_dialog_nsx"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:text="HSD" />

        <TextView
            android:id="@+id/scan_dialog_hsd"
            android:layout_width="match_parent"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:textColor="#000"
            android:textSize="30sp" />
    </GridLayout>

    <TextView
        android:id="@+id/scan_dialog_not_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="KHÔNG SCAN ĐƯỢC"
        android:textColor="#000"
        android:textSize="30sp"
        android:visibility="gone" />
</RelativeLayout>