<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.scsvn.whc_2016.main.equipment.EquipmentInventoryActivity"
    tools:showIn="@layout/activity_equipment_inventory">

    <EditText
        android:id="@+id/etTakeScannerResult"
        android:layout_width="wrap_content"
        android:layout_height="1px">

        <requestFocus />
    </EditText>

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/outline_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etScanResult"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/barcode"
            android:imeOptions="actionSend"
            android:inputType="textCapCharacters"
            android:paddingLeft="10dp"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/tv_equipment_qty_scanned"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:shadowColor="#000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="#009127"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:text=" / " />

        <TextView
            android:id="@+id/tv_equipment_Quantity"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center"
            android:shadowColor="#000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="#A00"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivCameraScan"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="1dp"
            android:background="@drawable/selector_gray_white"
            android:scaleType="center"
            android:src="@drawable/ic_action_image_camera_holo_light" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow" />

    </FrameLayout>
</LinearLayout>
