<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_tv_chuyen_hang_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_tv_chuyen_hang_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:weightSum="13">

        <TextView
            android:id="@+id/item_tv_chuyen_hang_ro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_tv_chuyen_hang_pallet_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_tv_chuyen_hang_ref"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_tv_chuyen_hang_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textColor="#A00"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_tv_chuyen_hang_qty_moved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textColor="#000"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/item_cb_chuyen_hang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true" />

    </LinearLayout>
</LinearLayout>