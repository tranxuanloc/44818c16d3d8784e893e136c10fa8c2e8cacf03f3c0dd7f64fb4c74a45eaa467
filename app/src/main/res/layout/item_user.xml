<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_cv_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/item_ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/item_tv_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A00" />

            <TextView
                android:id="@+id/item_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#000" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_tv_last_activity_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_ll_1"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/item_tv_last_action_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tv_last_activity_date"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="12dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/item_iv_state"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="end"
        android:layout_margin="3dp"
        android:contentDescription="@string/description_state_user" />
</android.support.v7.widget.CardView>