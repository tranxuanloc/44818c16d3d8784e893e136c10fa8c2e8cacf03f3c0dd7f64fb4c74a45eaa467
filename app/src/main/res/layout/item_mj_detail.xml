<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_mj_detail_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mj_detail_highlight_item"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_mj_detail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="5dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/item_mj_detail_job"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:clickable="true"
        android:hint="@string/label_job"
        android:padding="5dp"
        android:textColor="#000" />

    <CheckBox
        android:id="@+id/item_mj_detail_result"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:enabled="false"
        android:visibility="gone" />

    <EditText
        android:id="@+id/item_mj_detail_note"
        style="@style/EditTextNoBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/label_note"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/item_mj_detail_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_gray_transparent"
        android:padding="6dp"
        android:src="@drawable/ic_content_send_12dip" />
</LinearLayout>