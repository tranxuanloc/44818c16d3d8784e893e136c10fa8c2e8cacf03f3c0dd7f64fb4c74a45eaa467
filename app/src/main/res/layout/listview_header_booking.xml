<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    grid:columnCount="7"
    grid:rowCount="2">

    <TextView
        android:layout_width="50dp"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:text="Time\nSlot"
        android:textColor="#000"
        grid:layout_column="0"
        grid:layout_row="0"
        grid:layout_rowSpan="2" />

    <TextView
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center"
        android:text="Ton"
        android:textColor="#000"
        grid:layout_column="1"
        grid:layout_columnSpan="3"
        grid:layout_columnWeight="1"
        grid:layout_row="0"
        grid:layout_rowWeight="1" />

    <TextView
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center"
        android:text="Pallet"
        android:textColor="#000"
        grid:layout_column="4"
        grid:layout_columnSpan="3"
        grid:layout_columnWeight="1"
        grid:layout_row="0"
        grid:layout_rowWeight="1" />

    <TextView
        android:layout_width="@dimen/booking_width"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_horizontal"
        android:text="R+D"
        android:textColor="#A00"
        grid:layout_column="1"
        grid:layout_columnWeight="1"
        grid:layout_row="1" />

    <TextView
        android:layout_width="@dimen/booking_width"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_horizontal"
        android:text="R"
        android:textColor="#1155ff"
        grid:layout_column="2"
        grid:layout_columnWeight="1"
        grid:layout_row="1" />

    <TextView
        android:layout_width="@dimen/booking_width"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_horizontal"
        android:text="D"
        android:textColor="#007e2a"
        grid:layout_column="3"
        grid:layout_columnWeight="1"
        grid:layout_row="1" />

    <TextView
        android:layout_width="0dp"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_horizontal"
        android:text="R+D"
        android:textColor="#A00"
        grid:layout_column="4"
        grid:layout_columnWeight="1"
        grid:layout_row="1" />

    <TextView
        android:layout_width="0dp"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_horizontal"
        android:text="R"
        android:textColor="#1155ff"
        grid:layout_column="5"
        grid:layout_columnWeight="1"
        grid:layout_row="1" />

    <TextView
        android:layout_width="0dp"
        android:background="@drawable/outline_right_bottom_dark"
        android:gravity="center_horizontal"
        android:text="D"
        android:textColor="#007e2a"
        grid:layout_column="6"
        grid:layout_columnWeight="1"
        grid:layout_row="1" />
</android.support.v7.widget.GridLayout>
