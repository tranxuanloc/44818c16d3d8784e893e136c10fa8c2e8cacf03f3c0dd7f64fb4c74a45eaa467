<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFreeLocationRoomID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:text="A"
            android:textColor="#A00" />

        <TextView
            android:id="@+id/tvFreeLocationTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:gravity="center_horizontal"
            android:text="Total"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvFreeLocationFreeQty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Free"
            android:textColor="#1c64db" />

        <TextView
            android:id="@+id/tvFreeLocationPalletQty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="PltQty"
            android:textColor="#1c64db"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvFreeLocationVL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="VL"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvFreeLocationL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="L"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvFreeLocationVH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="VH"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvFreeLocationH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="H"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tvFreeLocationWF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="WF"
            android:textColor="#000" />
    </LinearLayout>

