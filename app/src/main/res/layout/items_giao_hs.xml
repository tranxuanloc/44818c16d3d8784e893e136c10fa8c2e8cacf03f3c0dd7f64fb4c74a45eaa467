<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvGhsCustomerNameVsNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Name"
        android:textColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvGhsOrderNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OrderNumber"
            android:textColor="#9000" />


        <TextView
            android:id="@+id/tvGhsDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="OrderDate"
            android:textColor="#A020F0"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvGhsTotalCarton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carton" />

        <TextView
            android:id="@+id/tvGhsTotalVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Volume" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvGhsRemark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Remark"
        android:textColor="#8000" />


</LinearLayout>

