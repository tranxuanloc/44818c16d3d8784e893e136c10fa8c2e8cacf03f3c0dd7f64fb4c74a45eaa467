<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.scsvn.whc_2016.main.lichsuravao.LichSuRaVaoActivity"
    tools:showIn="@layout/activity_lich_su_ra_vao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivArrowLeft"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/selector_gray_white"
            android:src="@drawable/ic_hardware_keyboard_arrow_left" />

        <Button
            android:id="@+id/btChooceDate"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#FFF"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/ivArrowRight"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/selector_gray_white"
            android:src="@drawable/ic_hardware_keyboard_arrow_right" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/lvOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow" />
    </FrameLayout>

</LinearLayout>
