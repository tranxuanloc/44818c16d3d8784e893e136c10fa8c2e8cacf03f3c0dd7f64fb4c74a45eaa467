<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="7dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_tv_in_out_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25dp"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_tv_in_out_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="Ngô Quang Trung"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_tv_in_out_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:singleLine="true"
            android:text="Tổng Giám đốc"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_tv_in_out_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:singleLine="true"
            android:text="Adm"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_tv_in_out_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="25dp"
            android:text="7h"
            android:textColor="#A000" />

        <TextView
            android:id="@+id/item_tv_in_out_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="F"
            android:textColor="#A000" />

        <TextView
            android:id="@+id/item_tv_in_out_time_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="7:13~17:00=10:13"
            android:textColor="#A000" />

        <TextView
            android:id="@+id/item_tv_in_out_time_keeper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="#A000" />

        <TextView
            android:id="@+id/item_tv_in_out_night_shift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:drawablePadding="5dp"
            android:text="Đêm"
            android:textColor="#A000" />

    </LinearLayout>


    <TextView
        android:id="@+id/item_tv_in_out_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#A000" />
</LinearLayout>